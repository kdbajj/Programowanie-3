<Window x:Class="Zadanie2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">

    <StackPanel>
       
        <!--kontener 1-->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Imię: " Margin="0,0,67,0" />
            <TextBox Width="90"/>
        </StackPanel>

        <!--kontener 2-->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Nazwisko: " Margin="0,0,40,0" />
            <TextBox Width="90"/>
        </StackPanel>

        <!--kontener 3-->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Data urodzenia: " Margin="0,0,10,0" />
            <TextBox Width="90"/>
        </StackPanel>

        <!--kontener 4-->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Semestr: " Margin="0,0,48,0" />
            <TextBox Width="90"/>
        </StackPanel>
    </StackPanel>
    
</Window>
