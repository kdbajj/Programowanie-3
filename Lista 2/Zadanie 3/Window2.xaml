<Window x:Class="Zadanie_3.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie_3"
        mc:Ignorable="d"
        xmlns:viewmodel="clr-namespace:Zadanie_3.ViewModel"
        Title="Window2" Height="300" Width="600">

    <Grid Grid.Column="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>



            <ItemsControl ItemsSource="{Binding Statki}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button CommandParameter="{Binding}"
                            Command="{Binding DataContext.AddShip, RelativeSource={RelativeSource AncestorType=Window}}"
                            BorderBrush="Black"
                            BorderThickness="1"
                            Width="30"
                            Height="30"
                            Margin="1"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>




        <ItemsControl ItemsSource="{Binding Statki2}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button CommandParameter="{Binding}"
                            Command="{Binding DataContext.AddShip, RelativeSource={RelativeSource AncestorType=Window}}"
                            BorderBrush="Black"
                            BorderThickness="1"
                            Width="30"
                            Height="30"
                            Margin="1"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>

</Window>
